{
  "OpenId": {
    "Authority": "{your hub domen url, e.g.: https://my-tiny-platform.com}/",
    "ClientId": "Clients.Dash",
    "MetadataUrl": "{your hub domen url, e.g.: https://my-tiny-platform.com}/.well-known/openid-configuration",
    "RedirectUri": "{your hub domen url, e.g.: https://my-tiny-platform.com}/dashboard/authentication/login-callback",
    "PostLogoutRedirectUri": "{your hub domen url, e.g.: https://my-tiny-platform.com}/logout",
    "ResponseType": "code",
    "RegisterPath": "{your hub domen url, e.g.: https://my-tiny-platform.com}/register",
    "ProfilePath": "{your hub domen url, e.g.: https://my-tiny-platform.com}/user/info",

    "DefaultScopes": [ "offline_access", "Hub.WebAPI", "Hub.SignalR" ]
  },
  "ServerConfig": {
    "HubHost": "{your hub domen url, e.g.: https://my-tiny-platform.com}",
    "GrpcHost": "{your hub domen url, e.g.: https://my-tiny-platform.com}",
    "SignalrEndpoint": "{your hub domen url, e.g.: https://my-tiny-platform.com}/dashhub",
    "WebapiEndpoint": "{your hub domen url, e.g.: https://my-tiny-platform.com}/webapi/"
  },

  "ApiKeys": {
    "YandexMap": "",
    "BingMap": "{your Bing Api map key}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information"
    }
  }
}