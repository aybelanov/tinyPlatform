@model UserAddressModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Users.Users.Addresses.AddNew").Text;
    //active menu item (system name)
    AppHtml.SetActiveMenuItemSystemName("Users list");
}

<form asp-controller="User" asp-action="AddressCreate" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Users.Users.Addresses.AddNew") 
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Edit" asp-route-id="@Model.UserId">@T("Admin.Users.Users.Addresses.BackToUser")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" class="btn btn-primary">
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.UserAddressDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateAddress", Model)
</form>