@model CountryModel

<div class="card-body">
    @(await Html.LocalizedEditorAsync<CountryModel, CountryLocalizedModel>("country-info-localized",
    @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <app-label asp-for="@Model.Locales[item].Name"/>
            </div>
            <div class="col-md-9">
                <app-editor asp-for="@Model.Locales[item].Name"/>
                <span asp-validation-for="@Model.Locales[item].Name"></span>
            </div>
        </div>
        <div>
            <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
        </div>
    </div>
,
    @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <app-label asp-for="Name"/>
            </div>
            <div class="col-md-9">
                <app-editor asp-for="Name" asp-required="true"/>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
    </div>
))
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="AllowsBilling"/>
        </div>
        <div class="col-md-9">
            <app-editor asp-for="AllowsBilling"/>
            <span asp-validation-for="AllowsBilling"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="TwoLetterIsoCode"/>
        </div>
        <div class="col-md-9">
            <app-editor asp-for="TwoLetterIsoCode" asp-required="true"/>
            <span asp-validation-for="TwoLetterIsoCode"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="ThreeLetterIsoCode"/>
        </div>
        <div class="col-md-9">
            <app-editor asp-for="ThreeLetterIsoCode" asp-required="true"/>
            <span asp-validation-for="ThreeLetterIsoCode"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="NumericIsoCode"/>
        </div>
        <div class="col-md-9">
            <app-editor asp-for="NumericIsoCode"/>
            <span asp-validation-for="NumericIsoCode"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="Published"/>
        </div>
        <div class="col-md-9">
            <app-editor asp-for="Published"/>
            <span asp-validation-for="Published"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="DisplayOrder"/>
        </div>
        <div class="col-md-9">
            <app-editor asp-for="DisplayOrder"/>
            <span asp-validation-for="DisplayOrder"></span>
        </div>
    </div>
</div>
