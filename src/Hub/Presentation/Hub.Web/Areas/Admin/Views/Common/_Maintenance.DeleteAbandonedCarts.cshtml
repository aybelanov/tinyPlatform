@model MaintenanceModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-6">
            <app-label asp-for="DeleteAbandonedDevices.OlderThan" />
        </div>
        <div class="col-md-6">
            <app-editor asp-for="DeleteAbandonedDevices.OlderThan" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 offset-md-6">
            <button type="submit" name="delete-abondoned-carts" class="btn btn-default">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </button>
        </div>
    </div>
    @if (Model.DeleteAbandonedDevices.NumberOfDeletedItems.HasValue)
                            {
    <div class="form-group row">
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissible no-margin">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @string.Format(T("Admin.System.Maintenance.DeleteAbandonedDevices.TotalDeleted").Text, Model.DeleteAbandonedDevices.NumberOfDeletedItems.Value)
            </div>
        </div>
    </div>
                            }
</div>