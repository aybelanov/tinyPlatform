@model BlogSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="AllowNotRegisteredUsersToLeaveComments" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="AllowNotRegisteredUsersToLeaveComments" />
            <span asp-validation-for="AllowNotRegisteredUsersToLeaveComments"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="BlogCommentsMustBeApproved" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="BlogCommentsMustBeApproved" />
            <span asp-validation-for="BlogCommentsMustBeApproved"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="NotifyAboutNewBlogComments" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="NotifyAboutNewBlogComments" />
            <span asp-validation-for="NotifyAboutNewBlogComments"></span>
        </div>
    </div>
</div>