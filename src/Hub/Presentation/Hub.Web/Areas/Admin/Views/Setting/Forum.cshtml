@using Hub.Web.Framework.Models.AdminAreaTour;
@model ForumSettingsModel

@{
   //page title
   ViewBag.PageTitle = T("Admin.Configuration.Settings.Forums").Text;
   //active menu item (system name)
   AppHtml.SetActiveMenuItemSystemName("Forums settings");

   const string hideCommonBlockAttributeName = "ForumSettingsPage.HideCommonBlock";
   var user = await workContext.GetCurrentUserAsync();
   var hideCommonBlock = await genericAttributeService.GetAttributeAsync<bool>(user, hideCommonBlockAttributeName);

   const string hidePermissionsBlockAttributeName = "ForumSettingsPage.HidePermissionsBlock";
   var hidePermissionsBlock = await genericAttributeService.GetAttributeAsync<bool>(user, hidePermissionsBlockAttributeName);

   const string hidePageSizesBlockAttributeName = "ForumSettingsPage.HidePageSizesBlock";
   var hidePageSizesBlock = await genericAttributeService.GetAttributeAsync<bool>(user, hidePageSizesBlockAttributeName);

   const string hideFeedsBlockAttributeName = "ForumSettingsPage.HideFeedsBlock";
   var hideFeedsBlock = await genericAttributeService.GetAttributeAsync<bool>(user, hideFeedsBlockAttributeName);

   //tour step
   ViewBag.TourStep = TourStep.BoardSettings;
}

@await Html.PartialAsync("_AdminTour")

<form asp-controller="Setting" asp-action="Forum" method="post">
   <div class="content-header clearfix">
      <h1 class="float-left">
         @T("Admin.Configuration.Settings.Forums")
      </h1>
      <div class="float-right">
         <button type="submit" name="save" class="btn btn-primary">
            <i class="far fa-save"></i>
            @T("Admin.Common.Save")
         </button>
         @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ForumSettingsButtons, additionalData = Model })
      </div>
   </div>

   <section class="content">
      <div class="container-fluid">
         <div class="form-horizontal">
            @await Component.InvokeAsync("SettingMode")
            <div asp-validation-summary="All"></div>

            <app-cards id="forumsettings-cards">
               <app-card asp-name="forumsettings-common" asp-icon="fas fa-info" asp-title="@T("Admin.Configuration.Settings.Forums.BlockTitle.Common")" asp-hide-block-attribute-name="@hideCommonBlockAttributeName" asp-hide="@hideCommonBlock" asp-advanced="false">@await Html.PartialAsync("_Forum.Common", Model)</app-card>
               <app-card asp-name="forumsettings-permissions" asp-icon="fas fa-shield-alt" asp-title="@T("Admin.Configuration.Settings.Forums.BlockTitle.Permissions")" asp-hide-block-attribute-name="@hidePermissionsBlockAttributeName" asp-hide="@hidePermissionsBlock" asp-advanced="false">@await Html.PartialAsync("_Forum.Permissions", Model)</app-card>
               <app-card asp-name="forumsettings-page-sizes" asp-icon="fas fa-file" asp-title="@T("Admin.Configuration.Settings.Forums.BlockTitle.PageSizes")" asp-hide-block-attribute-name="@hidePageSizesBlockAttributeName" asp-hide="@hidePageSizesBlock" asp-advanced="true">@await Html.PartialAsync("_Forum.PageSizes", Model)</app-card>
               <app-card asp-name="forumsettings-feeds" asp-icon="fas fa-rss" asp-title="@T("Admin.Configuration.Settings.Forums.BlockTitle.Feeds")" asp-hide-block-attribute-name="@hideFeedsBlockAttributeName" asp-hide="@hideFeedsBlock" asp-advanced="true">@await Html.PartialAsync("_Forum.Feeds", Model)</app-card>

               @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ForumSettingsDetailsBlock, additionalData = Model })
            </app-cards>
         </div>
      </div>
   </section>
</form>