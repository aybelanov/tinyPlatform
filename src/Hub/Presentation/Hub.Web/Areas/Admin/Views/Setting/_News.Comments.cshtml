@model NewsSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="AllowNotRegisteredUsersToLeaveComments" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="AllowNotRegisteredUsersToLeaveComments" />
            <span asp-validation-for="AllowNotRegisteredUsersToLeaveComments"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="NewsCommentsMustBeApproved" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="NewsCommentsMustBeApproved" />
            <span asp-validation-for="NewsCommentsMustBeApproved"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="NotifyAboutNewNewsComments" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="NotifyAboutNewNewsComments" />
            <span asp-validation-for="NotifyAboutNewNewsComments"></span>
        </div>
    </div>
</div>