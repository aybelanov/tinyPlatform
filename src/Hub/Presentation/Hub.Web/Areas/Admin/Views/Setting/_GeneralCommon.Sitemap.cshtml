@model GeneralCommonSettingsModel

<div class="card-body">
    @(Html.Raw(string.Format(T("Admin.Configuration.Settings.GeneralCommon.Sitemap.Instructions").Text, Url.Action("AllSettings", "Setting", new { settingName = "sitemapxml" }))))
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="SitemapSettings.SitemapEnabled" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="SitemapSettings.SitemapEnabled" />
            <span asp-validation-for="SitemapSettings.SitemapEnabled"></span>
        </div>
    </div>
    <app-nested-setting asp-for="SitemapSettings.SitemapEnabled">
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <app-label asp-for="SitemapSettings.SitemapPageSize" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="SitemapSettings.SitemapPageSize" />
                <span asp-validation-for="SitemapSettings.SitemapPageSize"></span>
            </div>
        </div>
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <app-label asp-for="SitemapSettings.SitemapIncludeTopics" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="SitemapSettings.SitemapIncludeTopics" />
                <span asp-validation-for="SitemapSettings.SitemapIncludeTopics"></span>
            </div>
        </div>
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <app-label asp-for="SitemapSettings.SitemapIncludeBlogPosts" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="SitemapSettings.SitemapIncludeBlogPosts" />
                <span asp-validation-for="SitemapSettings.SitemapIncludeBlogPosts"></span>
            </div>
        </div>
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <app-label asp-for="SitemapSettings.SitemapIncludeNews" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="SitemapSettings.SitemapIncludeNews" />
                <span asp-validation-for="SitemapSettings.SitemapIncludeNews"></span>
            </div>
        </div>
    </app-nested-setting>
</div>