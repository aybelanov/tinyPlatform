@model MediaSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="PicturesStoredIntoDatabase" />
        </div>
        <div class="col-md-1">
            <div class="form-text-row">
                @if (Model.PicturesStoredIntoDatabase)
                {
                    @T("Admin.Configuration.Settings.Media.PicturesStoredIntoDatabase.Database")
                }
                else
                {
                    @T("Admin.Configuration.Settings.Media.PicturesStoredIntoDatabase.FileSystem")
                }
            </div>
        </div>
        <div class="col-md-8">
            <button type="submit" id="change-picture-storage" name="change-picture-storage" class="btn btn-primary">
                @T("Admin.Configuration.Settings.Media.PicturesStoredIntoDatabase.Change")
            </button>
            <app-action-confirmation asp-button-id="change-picture-storage" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9 offset-md-3">
            <span>@T("Admin.Configuration.Settings.Media.PicturesStoredIntoDatabase.Note")</span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="MaximumImageSize" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="MaximumImageSize" />
            <span asp-validation-for="MaximumImageSize"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="MultipleThumbDirectories" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="MultipleThumbDirectories" />
            <span asp-validation-for="MultipleThumbDirectories"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="DefaultImageQuality" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="DefaultImageQuality" />
            <span asp-validation-for="DefaultImageQuality"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="ImportImagesUsingHash" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="ImportImagesUsingHash" />
            <span asp-validation-for="ImportImagesUsingHash"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="DefaultPictureZoomEnabled" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="DefaultPictureZoomEnabled" />
            <span asp-validation-for="DefaultPictureZoomEnabled"></span>
        </div>
    </div>
</div>