@using Shared.Clients.Configuration
@model AppSettingsModel

@{
   var isDemoUser = Context.User.IsInRole(UserDefaults.DemoRoleName);
}

<div class="card-body">
   <div class="form-group row">
      <div class="col-md-3">
         <app-label asp-for="AzureBlobConfigModel.ConnectionString" />
      </div>
      <div class="col-md-9">
         @if (isDemoUser)
         {
            <input class="form-control text-box single-line" type="text" value="*******">
         }
         else
         {
            <app-editor asp-for="AzureBlobConfigModel.ConnectionString" />
            <span asp-validation-for="AzureBlobConfigModel.ConnectionString"></span>
         }
      </div>
   </div>
   <div class="form-group row">
      <div class="col-md-3">
         <app-label asp-for="AzureBlobConfigModel.ContainerName" />
      </div>
      <div class="col-md-9">
         <app-editor asp-for="AzureBlobConfigModel.ContainerName" />
         <span asp-validation-for="AzureBlobConfigModel.ContainerName"></span>
      </div>
   </div>
   <div class="form-group row">
      <div class="col-md-3">
         <app-label asp-for="AzureBlobConfigModel.EndPoint" />
      </div>
      <div class="col-md-9">
         @if (isDemoUser)
         {
            <input class="form-control text-box single-line" type="text" value="*******">
         }
         else
         {
            <app-editor asp-for="AzureBlobConfigModel.EndPoint" />
            <span asp-validation-for="AzureBlobConfigModel.EndPoint"></span>
         }
      </div>
   </div>
   <div class="form-group row">
      <div class="col-md-3">
         <app-label asp-for="AzureBlobConfigModel.AppendContainerName" />
      </div>
      <div class="col-md-9">
         <app-editor asp-for="AzureBlobConfigModel.AppendContainerName" />
         <span asp-validation-for="AzureBlobConfigModel.AppendContainerName"></span>
      </div>
   </div>
   <div class="form-group row">
      <div class="col-md-3">
         <app-label asp-for="AzureBlobConfigModel.StoreDataProtectionKeys" />
      </div>
      <div class="col-md-9">
         @if (isDemoUser)
         {
            <input class="form-control text-box single-line" type="text" value="*******">
         }
         else
         {
            <app-editor asp-for="AzureBlobConfigModel.StoreDataProtectionKeys" />
            <span asp-validation-for="AzureBlobConfigModel.StoreDataProtectionKeys"></span>
         }
      </div>
   </div>
   <app-nested-setting asp-for="AzureBlobConfigModel.StoreDataProtectionKeys">
      <div class="form-group row">
         <div class="col-md-3">
            <app-label asp-for="AzureBlobConfigModel.DataProtectionKeysContainerName" />
         </div>
         <div class="col-md-9">
            @if (isDemoUser)
            {
               <input class="form-control text-box single-line" type="text" value="*******">
            }
            else
            {
               <app-editor asp-for="AzureBlobConfigModel.DataProtectionKeysContainerName" />
               <span asp-validation-for="AzureBlobConfigModel.DataProtectionKeysContainerName"></span>
            }
         </div>
      </div>
      <div class="form-group row">
         <div class="col-md-3">
            <app-label asp-for="AzureBlobConfigModel.DataProtectionKeysVaultId" />
         </div>
         <div class="col-md-9">
            @if (isDemoUser)
            {
               <input class="form-control text-box single-line" type="text" value="*******">
            }
            else
            {
               <app-editor asp-for="AzureBlobConfigModel.DataProtectionKeysVaultId" />
               <span asp-validation-for="AzureBlobConfigModel.DataProtectionKeysVaultId"></span>
            }
         </div>
      </div>
   </app-nested-setting>
</div>