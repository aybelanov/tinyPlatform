@model ForumModel

<div asp-validation-summary="ModelOnly"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ForumDetailsTop, additionalData = Model })
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <app-label asp-for="ForumGroupId"/>
                            </div>
                            <div class="col-md-9">
                                <app-select asp-for="ForumGroupId" asp-items="@(new SelectList(Model.ForumGroups, "Id", "Name"))" asp-required="true" />
                                <span asp-validation-for="ForumGroupId"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <app-label asp-for="Name"/>
                            </div>
                            <div class="col-md-9">
                                <app-editor asp-for="Name" asp-required="true"/>
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <app-label asp-for="Description"/>
                            </div>
                            <div class="col-md-9">
                                <app-textarea asp-for="Description"></app-textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <app-label asp-for="DisplayOrder"/>
                            </div>
                            <div class="col-md-9">
                                <app-editor asp-for="DisplayOrder"/>
                                <span asp-validation-for="DisplayOrder"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.ForumDetailsBottom, additionalData = Model })
            </div>
        </div>
    </div>
</section>