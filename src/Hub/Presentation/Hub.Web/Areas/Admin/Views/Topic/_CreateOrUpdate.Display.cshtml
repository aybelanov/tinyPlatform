@model TopicModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="Published" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="Published" />
            <span asp-validation-for="Published"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="IncludeInTopMenu" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="IncludeInTopMenu" />
            <span asp-validation-for="IncludeInTopMenu"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="IncludeInFooterColumn1" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="IncludeInFooterColumn1" />
            <span asp-validation-for="IncludeInFooterColumn1"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="IncludeInFooterColumn2" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="IncludeInFooterColumn2" />
            <span asp-validation-for="IncludeInFooterColumn2"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <app-label asp-for="IncludeInFooterColumn3" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="IncludeInFooterColumn3" />
            <span asp-validation-for="IncludeInFooterColumn3"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="IncludeInSitemap" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="IncludeInSitemap" />
            <span asp-validation-for="IncludeInSitemap"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="IsPasswordProtected" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="IsPasswordProtected" />
            <span asp-validation-for="IsPasswordProtected"></span>
        </div>
    </div>
    <app-nested-setting asp-for="IsPasswordProtected">
        <div class="form-group row advanced-setting">
            <div class="col-md-3">
                <app-label asp-for="Password" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="Password" html-attributes="@(new { autocomplete = "off" })"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
    </app-nested-setting>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="SelectedUserRoleIds" />
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4">
                    <app-select asp-for="SelectedUserRoleIds" asp-items="Model.AvailableUserRoles" asp-multiple="true" />
                    <script>
                        $(document).ready(function() {
                            var rolesIdsInput = $('#@Html.IdFor(model => model.SelectedUserRoleIds)').data("kendoMultiSelect");
                            rolesIdsInput.setOptions({
                                autoClose: false,
                                filter: "contains"
                            });

                            @if (Model.AvailableUserRoles.Count == 0)
                            {
                                <text>
                                    rolesIdsInput.setOptions({
                                        enable: false,
                                        placeholder: 'No user roles available'
                                    });
                                    rolesIdsInput._placeholder();
                                    rolesIdsInput._enable();
                                </text>
                            }
                        });
                    </script>
                </div>
                <div class="col-md-8">
                    @await Component.InvokeAsync("AclDisabledWarning")
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="AccessibleWhenPlatformClosed" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="AccessibleWhenPlatformClosed" />
            <span asp-validation-for="AccessibleWhenPlatformClosed"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting" @(Model.AvailableTopicTemplates.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
        <div class="col-md-3">
            <app-label asp-for="TopicTemplateId" />
        </div>
        <div class="col-md-9">
            <app-select asp-for="TopicTemplateId" asp-items="Model.AvailableTopicTemplates" />
            <span asp-validation-for="TopicTemplateId"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="DisplayOrder" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <app-label asp-for="SystemName" />
        </div>
        <div class="col-md-9">
            <app-editor asp-for="SystemName" />
            <span asp-validation-for="SystemName"></span>
        </div>
    </div>
</div>