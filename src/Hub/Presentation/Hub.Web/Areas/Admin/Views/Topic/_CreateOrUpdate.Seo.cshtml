@model TopicModel

<div class="card-body">
    @(await Html.LocalizedEditorAsync<TopicModel, TopicLocalizedModel>("topic-seo-localized",
    @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <app-label asp-for="@Model.Locales[item].SeName" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="@Model.Locales[item].SeName" />
                <span asp-validation-for="@Model.Locales[item].SeName"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <app-label asp-for="@Model.Locales[item].MetaTitle" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="@Model.Locales[item].MetaTitle" />
                <span asp-validation-for="@Model.Locales[item].MetaTitle"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <app-label asp-for="@Model.Locales[item].MetaKeywords" />
            </div>
            <div class="col-md-9">
                <app-editor asp-for="@Model.Locales[item].MetaKeywords" />
                <span asp-validation-for="@Model.Locales[item].MetaKeywords"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <app-label asp-for="@Model.Locales[item].MetaDescription" />
            </div>
            <div class="col-md-9">
                <app-textarea asp-for="@Model.Locales[item].MetaDescription"></app-textarea>
                <span asp-validation-for="@Model.Locales[item].MetaDescription"></span>
            </div>
        </div>
        <script>
                  $(document).ready(function () {
                      $('#@Html.IdFor(model => model.Locales[item].SeName)').on('input change', function () {
                          var parameters = {
                              entityId: '@Model.Id',
                              entityName: 'Topic',
                              seName: $(this).val()
                          };
                          warningValidation('@Url.Action("UrlReservedWarning", "Common")', '@Html.NameFor(model => model.Locales[item].SeName)', parameters);
                      });
                  });
        </script>
        <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
    </div>
,
