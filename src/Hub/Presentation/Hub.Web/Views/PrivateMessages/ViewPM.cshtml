@model PrivateMessageModel
@{
   Layout = "_ColumnsOne";

   //title
   AppHtml.AddTitleParts(T("PageTitle.ViewPM").Text);
   //page class
   AppHtml.AppendPageCssClassParts("html-private-messages");
   AppHtml.AppendPageCssClassParts("html-private-message-view-page");
}
<div class="page private-messages private-message-view-page">
   <div class="page-title">
      <h2>@T("PrivateMessages.View.ViewMessage")</h2>
   </div>
   <div class="page-body">
      <div class="view-message">
         <ul class="message-head">
            <li class="sender">
               <label>@T("PrivateMessages.View.From")</label>
               <span>@Model.UserFromName</span>
            </li>
            <li class="recipient">
               <label>@T("PrivateMessages.View.To")</label>
               <span>@Model.UserToName</span>
            </li>
            <li class="subject">
               <label>@T("PrivateMessages.View.Subject")</label>
               <span>@Model.Subject</span>
            </li>
         </ul>
         <div class="message-body">
            @Html.Raw(Model.Message)
         </div>
      </div>
      <div class="buttons">
         <button type="button" class="button-1 reply-pm-button" onclick="setLocation('@Url.RouteUrl("SendPMReply", new { toUserId = Model.FromUserId, replyToMessageId = Model.Id })')">@T("PrivateMessages.View.ReplyButton")</button>

         <button type="button" class="button-2 delete-pm-button" onclick="setLocation('@Url.RouteUrl("DeletePM", new { privateMessageId = Model.Id })')">@T("PrivateMessages.View.DeleteButton")</button>

         <button type="button" class="button-2 back-pm-button" onclick="setLocation('@Url.RouteUrl("PrivateMessages")')">@T("PrivateMessages.View.BackButton")</button>
      </div>
   </div>
</div>
