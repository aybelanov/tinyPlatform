@using Hub.Core.Http.Extensions
@using Hub.Services.Authentication

@{

   var session = Context.Session;

   var errors = session.Get<IList<string>>(AuthDefaults.ExternalAuthenticationErrorsSessionKey);

   if (errors != null)
      session.Remove(AuthDefaults.ExternalAuthenticationErrorsSessionKey);
}

@if (errors != null && errors.Count > 0)
{
   <div class="external-auth-errors">
      <ul>
         @foreach (var error in errors)
         {
            <li>@error</li>
         }
      </ul>
   </div>
}