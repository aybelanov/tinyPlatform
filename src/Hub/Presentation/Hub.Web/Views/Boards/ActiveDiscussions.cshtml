@model ActiveDiscussionsModel
@{
   Layout = "_ColumnsOne";

   //title
   AppHtml.AddTitleParts(T("Forum.PageTitle.ActiveDiscussions").Text);
   //page class
   AppHtml.AppendPageCssClassParts("html-active-discussions-page");
}
<div class="page active-discussions-page">
   @await Component.InvokeAsync("ForumBreadcrumb")
   @await Html.PartialAsync("_ForumHeader")
   @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.BoardsActivediscussionsAfterHeader, additionalData = Model })
   @await Html.PartialAsync("_ActiveTopics", Model)
   @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.BoardsActivediscussionsAfterTopics, additionalData = Model })
</div>
