<RadzenDropDown @ref=@_widgetDropDown
                @bind-Value:get=@_selectedWidget
                @bind-Value:set=@WidgetChange
                TValue="WidgetSelectItem"
                AllowVirtualization=true
                LoadData=@LoadWidgets
                AllowClear=@AllowClear
                AllowFiltering=true
                AllowSelectAll=false
                Name=@Name
                Data=@_availableWidgets
                Count="@(_availableWidgets?.TotalCount ?? 0)"
                Multiple=false
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterDelay="1000"
                TextProperty="Name"
                Placeholder=@Placeholder
                Style=@Style
                Disabled=@(Disabled || IsLoading)
                VirtualizationOverscanCount="50"
                @attributes=@Attributes />